## Enrolment

```{r, fig.width=9, fig.height=5.25, out.width="85%"}
majors <- list(
  
  read_excel("majorsfall2023.xlsx", skip = 6) %>%
  filter(is.na(`Registration Status`) == FALSE) %>%
  mutate(`Major 1` = if_else(`Major 2` == "Economics", "Economics", `Major 1`, missing = `Major 1`),
         schyr = 2023),
  
  read_excel("majorsfall2022.xlsx", skip = 6) %>%
  filter(is.na(`Registration Status`) == FALSE) %>%
  mutate(`Major 1` = if_else(`Major 2` == "Economics", "Economics", `Major 1`, missing = `Major 1`),
         schyr = 2022),  
  
  read_excel("majorsfall2021.xlsx", skip = 6) %>%
  filter(is.na(`Registration Status`) == FALSE) %>%
  mutate(`Major 1` = if_else(`Major 2` == "Economics", "Economics", `Major 1`, missing = `Major 1`),
         schyr = 2021),  
  
   read_excel("majorsfall2020.xlsx", skip = 6) %>%
  filter(is.na(`Registration Status`) == FALSE) %>%
  mutate(`Major 1` = if_else(`Major 2` == "Economics", "Economics", `Major 1`, missing = `Major 1`),
         schyr = 2020),
  
  
  read_excel("majorsfall2019.xlsx", skip = 6) %>%
  filter(is.na(`Registration Status`) == FALSE) %>%
  mutate(`Major 1` = if_else(`Major 2` == "Economics", "Economics", `Major 1`, missing = `Major 1`),
         schyr = 2019),
  
  read_excel("majorsfall2018.xlsx", skip = 6) %>%
  filter(is.na(`Registration Status`) == FALSE) %>%
  mutate(`Major 1` = if_else(`Major 2` == "Economics", "Economics", `Major 1`, missing = `Major 1`),
         schyr = 2018)
) %>%
  reduce(rbind)

majors23 <- filter(majors, schyr == 2023) %>%
  mutate(`Major 1` = factor(`Major 1`, levels = c("Economics and Data Analytics", "Economics and Accounting", "Economics and Financial Mgmt","Economics" )))
  

         
labeldata <- majors23 %>%
  filter(Year %in% c(1,2,3,4), `Registration Status` %in% c("Registered")) %>%
  group_by(Year) %>%
  summarise(n=n())
labeldata$`Major 1` <-NA
labeldata2 <- majors23 %>%
  filter(Year %in% c(1,2,3,4), `Registration Status` %in% c("Registered")) %>%
  summarise(n=n())
labeldata2$`Major 1` <-NA

enrol<-ggplot(filter(majors23, Year %in% c(1,2,3,4), `Registration Status` %in% c("Registered")), aes(fill=`Major 1`, x = Year)) + 
  geom_bar(position="stack") +
  geom_bar(aes(fill=`Major 1`, x = "Total")) +
  scale_fill_discrete(limits = c("Economics", "Economics and Financial Mgmt", "Economics and Accounting", "Economics and Data Analytics"),
                      labels = c("Econ", "Econ & Fin", "Econ & Acct", "Econ & DA" )) +
  theme_pander(nomargin=FALSE) + 
  labs(title = "Distribution of Registered Econ Majors by Year, Fall 2023", fill="Major", y = "Students" ) +
  geom_text(data=labeldata,aes(x = Year, y=n, label=n),
            position = position_dodge(0.9),vjust=-0.5) + 
  geom_text(data=labeldata2,aes(x = "Total", y=n, label=n),
            position = position_dodge(0.9),vjust=-0.5) 

enrol
```

## Admissions

```{r, fig.width=9, fig.height=5.25, out.width="85%"}

newadmits <- filter(majors, Year == 1) %>%
  filter(Year == 1, as.numeric(str_sub(`Admit Term`,1,4)) == schyr & as.numeric(str_sub(`Admit Term`,5,6)) == 9) 

newadmits2223 <- filter(newadmits, schyr >= 2022) %>%
  mutate(`Major 1` = factor(`Major 1`, levels = c("Economics and Data Analytics", "Economics and Accounting", "Economics and Financial Mgmt","Economics" )))

labeldata <- newadmits2223 %>%
  filter(Year %in% c(1,2,3,4), `Registration Status` %in% c("Registered")) %>%
  group_by(schyr) %>%
  summarise(n=n())
labeldata$`Major 1` <-NA

enrolyr1<-ggplot(filter(newadmits2223, Year %in% c(1,2,3,4), `Registration Status` %in% c("Registered")), aes(fill=`Major 1`, x = as.factor(schyr))) + 
  geom_bar(position="stack") +
  theme_pander(nomargin=FALSE) + 
  scale_fill_discrete(limits = c("Economics", "Economics and Financial Mgmt", "Economics and Accounting", "Economics and Data Analytics"),
                      labels = c("Econ", "Econ & Fin", "Econ & Acct", "Econ & DA" )) +
  labs(title = "Distribution of New Year 1 Econ Majors, Fall 2022 and 2023", fill="Major", y = "Students" , x = "Academic Year")  +
  geom_text(data=labeldata,aes(x = as.factor(schyr), y=n, label=n),
            position = position_dodge(0.9),vjust=-0.5)

enrolyr1
```

## Alternate Offers

```{r, fig.width=9, fig.height=5.25, out.width="85%"}
altoffers <- read_excel("altoffers.xlsx", 
    skip = 2) %>%
  filter(grepl("Total", `Academic Year`)) %>%
  mutate(year = as.numeric(str_sub(`Academic Year`,1,4))) %>%
  rename(altoffperc = `Alternate Offers %`)

ggplot(altoffers, aes(y = (1-altoffperc), x = year)) +
  geom_line(linewidth=1.5, alpha=0.8) + 
  theme_pander(nomargin=FALSE) + 
  ylim(0,1) +
  scale_x_continuous(breaks = scales::pretty_breaks(n=11)) +
  labs(title = "Share of Year 1 Registered Students who are Direct Applicants", y="Share", x="Academic Year")

```

